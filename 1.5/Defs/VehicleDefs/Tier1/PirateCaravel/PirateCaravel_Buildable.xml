			<AV_MastAndSails>3</AV_MastAndSails>
			<AV_Rigging>3</AV_Rigging>
			<AV_SailingInstruments>1</AV_SailingInstruments>
			<WoodLog>100</WoodLog>
			<Steel>50</Steel>
		</costList>
		
		<soundImpactDefault>BulletImpact_Wood</soundImpactDefault>
		
		<thingToSpawn>AV_PirateCaravel</thingToSpawn>
	</Vehicles.VehicleBuildDef>
