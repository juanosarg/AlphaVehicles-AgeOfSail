<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<Vehicles.VehicleDef ParentName="BaseSeaVehicle">
		<defName>AV_Junk</defName>
		<label>Junk</label>
		<description>A junk ship is a traditional sailing vessel known for its unique design, featuring a high stern and a flat bottom. It often employs multiple sails and was historically used for various maritime activities such as trade, fishing, and transportation.\n\n&lt;color=#bb8f04&gt;Crew:&lt;/color&gt; Helmsman x1, Passenger x3</description>
		
		<graphicData>
			<texPath>Things/Vehicles/Sea/Tier0/AV_Junk/AV_Junk</texPath>
			<graphicClass>Vehicles.Graphic_Vehicle</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(12,12)</drawSize>
			<drawOffset>
				<x>0.0</x>
				<y>0.0</y>
				<z>1.75</z>
			</drawOffset>
		
			<color>(77, 35, 25)</color>
		
		</graphicData>
		
		<fillPercent>1</fillPercent>
		
		
		<buildDef>AV_Junk_Blueprint</buildDef>
		
		<size>(2,9)</size>
		
		<vehicleMovementPermissions>DriverNeeded</vehicleMovementPermissions>
		<vehicleCategory>Transport</vehicleCategory>
		<techLevel>Medieval</techLevel>
		<vehicleType>Sea</vehicleType>
				
		<statBases>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.2</ArmorRating_Sharp>
			<ArmorRating_Heat>0</ArmorRating_Heat>
			<MarketValue>750</MarketValue>
			<Flammability>1</Flammability>
		</statBases>
		
		<vehicleStats>
			<Mass>250</Mass>
			<MoveSpeed>3</MoveSpeed>
			<CargoCapacity>200</CargoCapacity>
			<RepairRate>1</RepairRate>
		</vehicleStats>
		
		<soundOneShotsOnEvent Inherit="false">
			<li>
				<key>MoveStart</key>
				<value>AV_Wind</value>
			</li>
			
		</soundOneShotsOnEvent>
		
		
		
		<race>
			<baseBodySize>4</baseBodySize>
		</race>
		
		<properties>
		<riverCost>0.75</riverCost>
			<fishing>true</fishing>
			<diagonalRotation>false</diagonalRotation>
			<track Class = "Vehicles.VehicleTrack_Wake">
				<speed>2</speed>
			</track>
			
			<worldSpeedMultiplier>2.4</worldSpeedMultiplier>
			<winterSpeedMultiplier>5</winterSpeedMultiplier>
			
			<roles>
				<li>
					<key>driver</key>
					<label>Helmsman</label>
					<exposed>true</exposed>
					
					<handlingTypes>
						<li>Movement</li>
					</handlingTypes>
					
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
					
					<hitbox>
						<side>Back</side>
					</hitbox>
					
					<pawnRenderer>
						
					
						<drawOffsetNorth>(0, 0, -0.55)</drawOffsetNorth>
						<drawOffsetSouth>(0, 0, 0.55)</drawOffsetSouth>
						<drawOffsetEast>(-0.75, 0, 0.45)</drawOffsetEast>
						<drawOffsetWest>(0.75, 0, 0.45)</drawOffsetWest>
					</pawnRenderer>
				</li>
				<li>
					<key>Passenger</key>
					<label>Passenger</label>
					<slots>3</slots>
					<exposed>false</exposed>
					
					<hitbox>
						<side>Body</side>
						<noOverlapWith>
							<li>Back</li>
						</noOverlapWith>
					</hitbox>
					
				</li>
				
			</roles>
		</properties>
		
		<components>
			<li>
				<key>Mizzen</key>
				<label>Mizzen</label>
				<health>30</health>
				<priorityStatEfficiency>true</priorityStatEfficiency>
				<depth>External</depth>
				
				<categories>
					<li>MoveSpeed</li>
				</categories>
				
				
			</li>
			<li>
				<key>MainMast</key>
				<label>Main mast</label>
				<health>30</health>
				<priorityStatEfficiency>true</priorityStatEfficiency>
				<depth>External</depth>
				
				<categories>
					<li>MoveSpeed</li>
				</categories>
				
				
			</li>
			<li>
				<key>Foremast</key>
				<label>Foremast</label>
				<health>30</health>
				<priorityStatEfficiency>true</priorityStatEfficiency>
				<depth>External</depth>
				
				<categories>
					<li>MoveSpeed</li>
				</categories>
				
				
			</li>
			<li>
				<key>WoodenHull</key>
				<label>Main wooden hull</label>
				<health>80</health>
				<depth>External</depth>
				
				<hitbox>
					<side>Body</side>
				</hitbox>
			</li>
			
			<li>
				<key>Rudder</key>
				<label>Rudder</label>
				<health>40</health>
				<depth>External</depth>
				
				<hitbox>
					<side>Body</side>
				</hitbox>
			</li>
		</components>
		
		
	</Vehicles.VehicleDef>
